<main>
  <section>
    <div class="form">
      <h1 class="form__title">Редагування товару</h1>

      <form method="POST" action="/product-edit">
        <div class="form__content">
          <h2 class="form__card_title">Інформація про товар</h2>

          <div class="form__name-price">
            <div class="form__field">
              <label for="name_product" class="form__label">Назва товару:</label>
              <input type="name_product" name="name" class="form__input" value={{product.name}}>
            </div>
            <div class="form__field">
              <label for="price" class="form__label">Ціна:</label>
              <input type="price" name="price" class="form__input" value={{product.price}}>
            </div>
            <div class="form__field">
              <label for="id" class="form__label">ID:</label>
              <input type="id" name="id" class="form__input" value={{product.id}}>
            </div>
          </div>


          <div class="form__field__description">
            <label for="description" class="form__label">Короткий опис товару:</label>
            <input type="description" name="description" class="form__input_description" value={{product.description}}>
            <p class="form__description_mark">Відображається у картці товару</p>
          </div>
          <div class="form__buttons">
            <button class="form__button_1" method="POST" action="/product-edit"> Зберегти оновлення</button>
            <a class="form__button_2" href="/product-delete?id={{product.id}}"> Видалити товар</a>
          </div>
        </div>

      </form>
    </div>
  </section>
</main>



